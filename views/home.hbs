{{#if failure}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{failure}}
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
        ></button>
    </div>
{{/if}}

<div class="row mb-2">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a
            href="/addUser"
            type="button"
            class="btn btn-primary align-self-center"
        >Add User</a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thread-dark">
        <tr>

            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each users}}
            <tr>
                <td>{{this.dataValues.first_name}}</td>
                <td>{{this.dataValues.last_name}}</td>
                <td>{{this.dataValues.email}}</td>
                <td>{{this.dataValues.phone}}</td>
                <td class="text-end">
                    <a
                        href="/user/{{this.dataValues.uuid}}"
                        type="button"
                        class="btn btn-light btn-small"
                    >
                        <i class="bi bi-eye"></i>
                        view
                    </a>
                    <a
                        href="/edit/{{this.dataValues.uuid}}"
                        type="button"
                        class="btn btn-light btn-small"
                    >
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a
                        href="/delete/{{this.dataValues.uuid}}"
                        type="button"
                        class="btn btn-light btn-small"
                    >
                        <i class="bi bi-person-x"></i>
                        Delete
                    </a>
                </td>
            </tr>
        {{/each}}

    </tbody>
</table>