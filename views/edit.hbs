{{#if failure}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{failure}}
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
        ></button>
    </div>
{{/if}}

<form class="row g-3 needs-validation" action="/edit/{{user.dataValues.uuid}}" method="post">
{{> user_form}}
</form>